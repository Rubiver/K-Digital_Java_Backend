<?xml version="1.0" encoding="UTF-8"?>
<Context path="/">
    <Resource
            name="jdbc/java"
            auth="Container"
            type="javax.sql.DataSource"
            maxActive="100"
            maxIdle="30"
            maxWait="10000"
            validationQuery="SELECT 1"
            validationInterval="30000"
            username="java"
            password="java"
            driverClassName="com.mysql.jdbc.Driver"
            url="jdbc:mysql://localhost:3306/java"
    />
</Context>
